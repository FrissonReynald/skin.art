		</control>
		<control type="image">
			 <fadetime>fadetime_Fanart</fadetime>
			<include>screen_Dimensions</include>
			<texture background="true">$VAR[global_Fanart]</texture>
			<aspectratio align="center" aligny="top">scale</aspectratio>
			<fadetime>fadetime_Fanart</fadetime>
